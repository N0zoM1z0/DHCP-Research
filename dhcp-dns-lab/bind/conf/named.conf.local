// 引入TSIG密钥
include "/etc/bind/ddns-key.conf";

// 定义正向解析区域
zone "lab.local" {
    type master;
    file "/var/lib/bind/zones/db.lab.local"; // 数据文件路径
    allow-update { key ddns-key; }; // 允许使用密钥进行更新
};

// 定义反向解析区域
zone "100.168.192.in-addr.arpa" {
    type master;
    file "/var/lib/bind/zones/db.192.168.100"; // 数据文件路径
    allow-update { key ddns-key; }; // 允许使用密钥进行更新
};
